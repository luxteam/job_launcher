<?xml version="1.0" ?>
<job-manifest enable="False">

    <outpath value="{OutputDir}"/>

    <execute command='python "{Script}/test_stage.py"' stage="stage1">
        <argument>--stage_report stage1.json</argument>
        <argument>--terminate_status OK</argument>
        <argument>--output_folder "{OutputDir}"</argument>
        <argument>--current_report report1.json</argument>
    </execute>

    <execute command='python "{Script}/test_stage.py"' stage="stage2">
        <argument>--stage_report stage2.json</argument>
        <argument>--terminate_status OK</argument>
        <argument>--output_folder "{OutputDir}"</argument>
        <argument>--previous_report report1.json</argument>
        <argument>--current_report report2.json</argument>
    </execute>

    <execute command='python "{Script}/test_stage.py"' stage="stage3">
        <argument>--stage_report stage3.json</argument>
        <argument>--terminate_status OK</argument>
        <argument>--output_folder "{OutputDir}"</argument>
        <argument>--previous_report report2.json</argument>
        <argument>--current_report report3.json</argument>
    </execute>

    <execute command='python "{Script}/test_stage.py"' stage="stage4">
        <argument>--stage_report stage4.json</argument>
        <argument>--terminate_status FAILED</argument>
        <argument>--output_folder "{OutputDir}"</argument>
        <argument>--previous_report report3.json</argument>
        <argument>--current_report report4.json</argument>
    </execute>

</job-manifest>
